<h1>Edit Pix Key</h1>

<%= form_for(@pix_key) do |f| %>
  <div class="form-group">
    <%= f.label :key %>
    <%= f.text_field :key, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :hotel %>
    <%= f.select :hotel_id, Hotel.all, { include_blank: true }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back", pix_keys_path, class: "btn btn-secondary" %>
