<h1>New Pix Key</h1>

<%= form_for(@pix_key) do |f| %>
  <div class="form-group">
    <%= f.label :key %>
    <%= f.text_field :key, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.hidden_field :hotel_id, value: @hotel.id %>
  </div>

  <div class="form-group">
    <%= f.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>

