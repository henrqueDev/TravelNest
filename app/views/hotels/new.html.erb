<h1>Criar hotel</h1>

<%= form_for(@hotel) do |form| %>


  <% if @hotel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hotel.errors.count, "erro") %> ao salvar o hotel:</h2>

      <ul>
      <% @hotel.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :cnpj %>
    <%= form.text_field :cnpj %>
  </div>

  <div class="field">
    <%= form.label :establishment_description %>
    <%= form.text_area :establishment_description %>
  </div>

  <div class="field">
    <%= form.label :evaluation %>
    <%= form.number_field :evaluation, min: 1, max: 5 %>
  </div>

  <div class="field">
    <%= form.label :hotel_location %>
    <%= form.fields_for :hotel_location do |location_form| %>
      <div class="field">
        <%= location_form.label :country_id %>
        <%= location_form.select :country_id, Country.all.map { |country| [country.name, country.id] } %>
      </div>
      
      <div class="field">
        <%= location_form.label :positionX %>
        <%= location_form.number_field :positionX, step: :any %>
      </div>
      <div class="field">
        <%= location_form.label :positionY %>
        <%= location_form.number_field :positionY, step: :any %>
      </div>
      <div class="field">
        <%= location_form.label :country_id %>
        <%= location_form.select :country_id, Country.all.map { |country| [country.name, country.id] } %>
      </div>

      <div class="field">
        <%= location_form.label :state_id %>
        <%= location_form.select :state_id, State.all.map { |state| [state.name, state.id] } %>
      </div>

      <div class="field">
        <%= location_form.label :city_id %>
        <%= location_form.select :city_id, City.all.map { |city| [city.name, city.id] } %>
      </div>
      
      <div class="field">
        <%= location_form.label :nameStreet %>
        <%= location_form.text_field :nameStreet%>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :hotel_type_id %>
    <%= form.select :hotel_type_id, HotelType.all.map { |hotel_type| [hotel_type.name, hotel_type.id] } %>
  </div>

  <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit "Criar hotel" %>
  </div>
<% end %>
